{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@nx-mean-starter/testing": ["libs/testing/src/index.ts"],
      "@nx-mean-starter/core": ["libs/core/src/index.ts"],
      "@nx-mean-starter/shared": ["libs/shared/src/index.ts"],
      "@nx-mean-starter/models": ["libs/models/src/index.ts"],
      "@nx-mean-starter/state/root": ["libs/state/root/src/index.ts"],
      "@nx-mean-starter/state/router": ["libs/state/router/src/index.ts"],
      "@nx-mean-starter/state/auth": ["libs/state/auth/src/index.ts"],
      "@nx-mean-starter/schemas": ["libs/schemas/src/index.ts"],
      "@nx-mean-starter/state/users": ["libs/state/users/src/index.ts"],
      "@nx-mean-starter/navigation/users": ["libs/navigation/users/src/index.ts"],
      "@nx-mean-starter/feature/auth": ["libs/feature/auth/src/index.ts"],
      "@nx-mean-starter/state/layout": ["libs/state/layout/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
